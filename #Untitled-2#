
CC=g++
CFLAGS=-std=c++11 -g -Wl,--no-undefined -w

# IMPORTANT
# replace <TODO> with your installation directories
#
SFML=~/dev/SFML-2.5.1

INCLUDESFML=$(SFML)/include

LIBSFML=$(SFML)/lib

INCLUDES := -I $(INCLUDESFML)
# for non-debug builds
LIBS     :=  -L $(LIBSFML) -l sfml-graphics -l sfml-window -l sfml-system   -lmagic 

AUDIOEXE := SelfJoystick

$(AUDIOEXE): Main.o
	$(CC) $(CFLAGS) $< -o $@  $(LIBS)

Main.o: selfjoystick.cpp selfjoystick.hpp 
	$(CC) $(INCLUDES) $(CFLAGS) -c $< -o $@ 
 
clean:
	rm $(AUDIOEXE) *.o